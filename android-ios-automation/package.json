{
  "name": "android-ios-automation",
  "version": "1.0.0",
  "description": "Text/Voice to Mobile App Automation Platform",
  "main": "index.js",
  "scripts": {
    "dev": "docker-compose up -d",
    "dev:logs": "docker-compose logs -f",
    "dev:stop": "docker-compose down",
    "build": "docker-compose build",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "setup": "npm install && cd services && npm install && cd ../frontend && npm install",
    "deploy": "docker-compose -f docker-compose.prod.yml up -d",
    "migrate": "npm run migrate:up",
    "migrate:up": "node scripts/migrate.js up",
    "migrate:down": "node scripts/migrate.js down",
    "seed": "node scripts/seed.js",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js"
  },
  "keywords": [
    "automation",
    "mobile",
    "android",
    "ios",
    "ai",
    "devops",
    "ci-cd",
    "code-generation"
  ],
  "author": "Base44 Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.0",
    "rate-limiter-flexible": "^3.0.0",
    "winston": "^3.10.0",
    "joi": "^17.9.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "pg": "^8.11.0",
    "redis": "^4.6.0",
    "amqplib": "^0.10.0",
    "axios": "^1.4.0",
    "socket.io": "^4.7.0",
    "bull": "^4.10.0",
    "multer": "^1.4.0",
    "sharp": "^0.32.0",
    "ffmpeg-static": "^5.1.0",
    "openai": "^4.0.0",
    "@huggingface/inference": "^2.0.0",
    "aws-sdk": "^2.1400.0",
    "node-cron": "^3.0.0",
    "nodemailer": "^6.9.0",
    "sentry-node": "^7.60.0",
    "prom-client": "^14.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/achintir-projects/android-ios-automation.git"
  },
  "bugs": {
    "url": "https://github.com/achintir-projects/android-ios-automation/issues"
  },
  "homepage": "https://github.com/achintir-projects/android-ios-automation#readme"
}